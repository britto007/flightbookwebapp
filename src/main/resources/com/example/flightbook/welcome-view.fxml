<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.flightbook.WelcomeController"
           style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">
    <top>
        <VBox alignment="TOP_LEFT" style="-fx-padding: 24;">
            <Label text="crafted for seamless journeys" 
                   style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: white; -fx-letter-spacing: 0.08em;"/>
        </VBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="18.0">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
            </padding>
            
            <Label text="FLIGHT BOOKING" 
                   style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: white; -fx-letter-spacing: 0.14em;"/>
            
            <Label text="Where next?" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-letter-spacing: 0.05em;"/>
            
            <Label text="Plan, book, and track flights with a sleek new look." 
                   style="-fx-font-size: 15px; -fx-text-fill: white; -fx-wrap-text: true; -fx-text-alignment: center;"
                   maxWidth="400"/>
            
            <Button fx:id="getStartedButton" 
                    text="Get started" 
                    onAction="#onGetStartedClick"
                    style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 40 12 40; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </VBox>
    </center>
</BorderPane>
