<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.flightbook.LoginController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 10 0;">
            <Button fx:id="backButton" onAction="#onBackClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;" text="â† Back" />
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="12">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-letter-spacing: 0.05em;" text="Welcome back" />
            
            <Label contentDisplay="CENTER" maxWidth="600" prefHeight="19.0" prefWidth="518.0" style="-fx-font-size: 13px; -fx-text-fill: white; -fx-wrap-text: true; -fx-text-alignment: center;" text="Choose how you want to sign in to continue booking.">
            <padding>
               <Insets left="140.0" />
            </padding></Label>
            
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <!-- User Login Section -->
                <VBox alignment="CENTER" prefWidth="400" spacing="10" style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4, 0, 0, 2); -fx-border-color: #E74C3C; -fx-border-width: 2; -fx-border-radius: 12;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Traveler login" />
                    
                    <Label maxWidth="350" style="-fx-font-size: 11px; -fx-text-fill: #E0E0E0; -fx-wrap-text: true; -fx-text-alignment: center;" text="Access your trips, tickets, and saved destinations." />
                    
                    <VBox alignment="CENTER_LEFT" prefWidth="350" spacing="8" style="-fx-padding: 10 0 0 0;">
                        <Label style="-fx-font-size: 12px; -fx-text-fill: white;" text="Username or email" />
                        <TextField fx:id="userIdField" promptText="Enter username or email" style="-fx-background-color: rgba(255,255,255,0.67); -fx-background-radius: 14; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: black;" />
                        
                        <Label style="-fx-font-size: 12px; -fx-text-fill: white;" text="Password" />
                        <PasswordField fx:id="userPasswordField" promptText="Enter password" style="-fx-background-color: rgba(255,255,255,0.67); -fx-background-radius: 14; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: black;" />
                        
                        <Button fx:id="userLoginButton" maxWidth="Infinity" onAction="#onUserLogin" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 0 12 0; -fx-background-radius: 5; -fx-cursor: hand;" text="Login" />
                    </VBox>
                </VBox>
                
                <!-- Admin Login Section -->
                <VBox alignment="CENTER" prefWidth="400" spacing="10" style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4, 0, 0, 2); -fx-border-color: #3498DB; -fx-border-width: 2; -fx-border-radius: 12;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Admin login" />
                    
                    <Label maxWidth="350" style="-fx-font-size: 11px; -fx-text-fill: #E0E0E0; -fx-wrap-text: true; -fx-text-alignment: center;" text="Manage flights, schedules, and passenger lists." />
                    
                    <VBox alignment="CENTER_LEFT" prefWidth="350" spacing="8" style="-fx-padding: 10 0 0 0;">
                        <Label style="-fx-font-size: 12px; -fx-text-fill: white;" text="Username or email" />
                        <TextField fx:id="adminIdField" promptText="Enter username or email" style="-fx-background-color: rgba(255,255,255,0.67); -fx-background-radius: 14; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: black;" />
                        
                        <Label style="-fx-font-size: 12px; -fx-text-fill: white;" text="Password" />
                        <PasswordField fx:id="adminPasswordField" promptText="Enter password" style="-fx-background-color: rgba(255,255,255,0.67); -fx-background-radius: 14; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: black;" />
                        
                        <Button fx:id="adminLoginButton" maxWidth="Infinity" onAction="#onAdminLogin" style="-fx-background-color: #5DE1C0; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 0 12 0; -fx-background-radius: 5; -fx-cursor: hand;" text="Login" />
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Label fx:id="statusLabel" style="-fx-font-size: 12px; -fx-text-fill: white;" BorderPane.alignment="CENTER" />
        </HBox>
    </bottom>
</BorderPane>
