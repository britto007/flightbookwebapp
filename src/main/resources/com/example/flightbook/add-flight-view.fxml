<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.flightbook.AddFlightController"
            style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <Button fx:id="backButton" text="â† Back" onAction="#onBackClick"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
            <Label text="Add Flight" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"
                   HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="20"/>
                </HBox.margin>
            </Label>
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="15" alignment="CENTER" 
                  style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4, 0, 0, 2); -fx-border-color: #E74C3C; -fx-border-width: 2; -fx-border-radius: 12;"
                  prefWidth="500">
                <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="450">
                    <Label text="Flight Number" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <TextField fx:id="flightNumberField" promptText="Enter flight number" 
                               style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: white;"/>
                    
                    <Label text="From" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <TextField fx:id="fromField" promptText="Enter origin city" 
                               style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: white;"/>
                    
                    <Label text="To" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <TextField fx:id="toField" promptText="Enter destination city" 
                               style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: white;"/>
                    
                    <Label text="Departure Date" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <DatePicker fx:id="departureDatePicker" 
                                style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px;"/>
                    
                    <Label text="Departure Time (HH:mm)" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <TextField fx:id="departureTimeField" promptText="HH:mm" 
                               style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: white;"/>
                    
                    <Label text="Arrival Date" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <DatePicker fx:id="arrivalDatePicker" 
                                style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px;"/>
                    
                    <Label text="Arrival Time (HH:mm)" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <TextField fx:id="arrivalTimeField" promptText="HH:mm" 
                               style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: white;"/>
                    
                    <Label text="Price" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <TextField fx:id="priceField" promptText="Enter price" 
                               style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px; -fx-padding: 12; -fx-text-fill: white;"/>
                    
                    <Label text="Aircraft Type" style="-fx-font-size: 12px; -fx-text-fill: white;"/>
                    <ComboBox fx:id="aircraftComboBox" 
                              style="-fx-background-color: #34495E; -fx-background-radius: 12; -fx-font-size: 14px;"/>
                    
                    <Button text="Submit" onAction="#onSubmitClick"
                            style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 0 12 0; -fx-background-radius: 5; -fx-cursor: hand;"
                            maxWidth="Infinity"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
